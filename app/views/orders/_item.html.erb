<% @order.line_items.each do |i| %>

<tr>
  <td>
    <%= image_tag i.product.image.tiny %>
  </td>
  <td>
    <h4><%= i.product.name %></h4>
    <br>
    <p><%= i.product.description %></p>
  </td>
  <td>
    <%= i.quantity %>
  </td>
  <td>
    $<%= "%.2f" % (i.total_price_cents / 100.0) %>
  </td>
</tr>

<% end %>
